# Git
alias gst='git status'
alias gd='git diff'
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit -m'
alias gp='git push'

# Directory
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="cd ~"
alias -- -="cd -"

# Rails
alias be="bundle exec"
alias ber="bundle exec rails"
alias berspec="bundle exec rspec"
alias berspec-of="bundle exec rspec --only-failures"
alias berspec-t="bundle exec rspec --tag"

# Golang
alias gofmt="gofmt -w"

# Vim
alias vim="vim -O"
alias vi="vim"

# Docker
alias ld='lazydocker'

# Kubernetes
alias k="kubectl"
alias kgp="kubectl get pods"
alias kgd="kubectl get deployments"
alias kgv="kubectl get volumes"
alias kgh="kubectl get hpa"
alias kgs="kubectl get services"

# Others
alias json="python -mjson.tool"
alias psg="ps aux | grep"
alias kill9="kill -9"
alias ping='prettyping --nolegend'
alias weather='curl http://wttr.in'
alias highlight='highlight -O rtf --force -s edit-eclipse'

# replace cat using highlight
alias cat='highlight $1 --out-format xterm256 -l --force -s molokai'

# it is the same that watch function in linux
watch() {
  while :; do clear; $1 $2 $3; sleep 2; done
}

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="hostname -I"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Mysql
alias mysql_start="/usr/local/opt/mysql@5.6/bin/mysql.server start"
